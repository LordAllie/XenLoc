<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#9DACB9</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/color_black</item>
        <item name="android:background">@color/color_dull_white</item>
    </style>

    <style name="CustomToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MyPopupMenu" parent="@android:style/TextAppearance.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/color_normal</item>
    </style>

    <style name="RootView" parent="Widget.Design.CoordinatorLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="CustomCard" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/color_white</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">1dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
</resources>
